{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4, {"SwitchCase": 1}],
        "space-before-function-paren": ["error", {"anonymous": "never", "named": "never", "asyncArrow": "always"}],
        "quotes": ["error", "double"],
        "eqeqeq": "off",
        "comma-dangle": ["error", "never"]
    }
}
